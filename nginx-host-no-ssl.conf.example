# Конфигурация nginx для хоста БЕЗ SSL (без домена)
# Используйте IP адрес VPS для доступа
# Скопируйте в /etc/nginx/sites-available/ivanov-gym
# sudo cp nginx-host-no-ssl.conf.example /etc/nginx/sites-available/ivanov-gym
# sudo ln -s /etc/nginx/sites-available/ivanov-gym /etc/nginx/sites-enabled/

server {
    listen 80;
    listen [::]:80;
    server_name _;  # Принимает любой домен/IP

    # Проксирование на Docker контейнер
    location / {
        proxy_pass http://127.0.0.1:8080;  # Или используйте имя контейнера
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        
        # Таймауты
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    # Безопасность заголовков (даже без SSL)
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;

    # Логи
    access_log /var/log/nginx/ivanov-gym-access.log;
    error_log /var/log/nginx/ivanov-gym-error.log;
}
